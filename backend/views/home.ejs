<!DOCTYPE html>
<html>

<head>
  <script>
    function onload(e) {
      console.log("onload");
      var room = document.getElementById("room");
      let x = sessionStorage.getItem("login");
      let user = JSON.parse(x);
      const message = {
        user: user.username,
        room: room.value,
      };
      socket.emit("joingameroom", JSON.stringify(message));
    }
  </script>
